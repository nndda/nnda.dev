{
  "name": "nnda.dev",
  "scripts": {
    "start": "npm run build:config && npm run build:data && concurrently 'webpack-dev-server --config ./config/webpack.dev.js --port 9000' 'npm run watch:data'",
    "build": "npm run build:config && npm run fetch:gh && npm run fetch:data-ext && npm run build:data && webpack --no-devtool --config ./config/webpack.config.js && npm run post:build",
    "build:data": "tsx --tsconfig ./config/tsconfig.build.json ./src/scripts/build/index.ts",
    "build:config": "tsc --project ./config/tsconfig.build.json",
    "watch:project": "ts-node ./src/_projects/project-pages.ts --watch",
    "watch:data": "npm run build:data -- --watching",
    "lint:styles": "stylelint --config ./config/.stylelintrc.json \"**/*.scss\"",
    "lint:scripts": "eslint --config ./config/eslint.config.ts .",
    "fetch:gh": "python ./src/api/gh.py",
    "fetch:data-ext": "python ./src/api/data-ext.py",
    "post:build": "python ./src/post/post_build.py && tsx --tsconfig ./config/tsconfig.build.json ./src/post/post-build.ts"
  },
  "author": "nnda",
  "license": " GPL-3.0-or-later",
  "engines": {
    "node": ">=25.5.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^9.39.2",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@swc/html": "^1.15.5",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.2.0",
    "@types/webpack": "^5.28.5",
    "autoprefixer": "^10.4.24",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "cron-parser": "^5.4.0",
    "css-loader": "^7.1.2",
    "cssnano": "^7.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "html-bundler-webpack-plugin": "^4.22.0",
    "image-size": "^2.0.2",
    "jiti": "^2.6.1",
    "lodash": "^4.17.21",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "sass": "^1.96.0",
    "sass-loader": "^16.0.6",
    "simple-icons": "^16.7.0",
    "style-loader": "^4.0.0",
    "stylelint": "^17.1.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "ts-loader": "^9.5.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "wrangler": "^4.61.1",
    "yaml": "^2.8.2"
  }
}
