<footer>
  <div class="footer-body">
    <div class="links-section horizontal this-site">
      <div class="footer-heading">This Site</div>

      <div class="icon-text site-opt">
        {{{icon "footer" "scale-balanced"}}}
        <span>
          Licensed Under
          <a href="https://{{repoURL}}/blob/main/LICENSE"
            target="_blank"
            rel="nofollow noopener noreferrer"
            referrerpolicy="no-referrer"
            aria-label="GNU GPLv3 License text"
          >
            GNU GPLv3
          </a>
          <br>
          <small>
            Source code only
          </small>
        </span>
      </div>

      {{#if buildCommitSHA}}
      <div class="icon-text site-opt">
        {{{icon "footer" "box"}}}
        <span>
          Version
          <a href="https://{{repoURL}}/commit/{{buildCommitSHAFull}}"
            target="_blank"
            rel="nofollow noopener noreferrer"
            referrerpolicy="no-referrer"
            aria-label="Build commit SHA"
          >
            {{buildCommitSHA}}
          </a>
          <br>
          <small>
            Last published
            <abbr id="last-published-label" title="{{releaseDate}}"></abbr>
          </small>
        </span>
      </div>
      {{/if}}

      <div class="icon-text site-opt">
        {{{icon "footer" "clock"}}}
        <span>
          Last updated
          <abbr id="last-updated-label" title="{{buildTimetamp}}"></abbr>
          <br>
          <small>
            Next update
            <abbr id="next-update-label" title="{{nextUpdateDate}}"></abbr>
          </small>
        </span>
      </div>

      <ul class="nostyle">
      {{#each siteOptions}}
        <li class="icon-text">
          <a href="{{this.url}}"
            target="_blank"
            rel="nofollow noopener noreferrer"
            referrerpolicy="no-referrer"
            aria-label="{{{this.url}}}"
          >
            {{{this.icon}}}
            <span>
              {{this.name}}
            </span>
          </a>
        </li>
      {{/each}}
      </ul>

      <div class="package-info">
        This website is made possible with these awesome tech, projects, &amp; libraries üëáÔ∏è
      </div>
    </div>
    <div class="links-section">
      <blockquote class="note">
        <div class="title">{{{icon "footer" "note-sticky"}}} Note</div>
        <p>{{{site.note}}}</p>
      </blockquote>
    </div>
  </div>

  <div class="logos">
    <div class="inner">
      {{ img "/assets/KawaiiLogos/Node.js.webp" "Node.js" }}
      {{ img "/assets/KawaiiLogos/Cloudflare.webp" "Cloudflare" }}
      {{ img "/assets/KawaiiLogos/TypeScript.webp" "TypeScript" }}
    </div>
  </div>

  <div class="packages"><div class="inner"></div></div>

  <div class="footer-end">
    <div>
      Copyright &copy; {{year}} {{site.author}}{{#if allRightsReserved}}. All rights reserved.{{/if}}
    </div>
    <div class="flex-space"></div>
    <div>
      <a href="https://{{repoURL}}"
        target="_blank"
        rel="nofollow noopener noreferrer"
        referrerpolicy="origin"
      >
        {{{icon "footer" "code"}}} Source Code
      </a>
    </div>
  </div>
</footer>
